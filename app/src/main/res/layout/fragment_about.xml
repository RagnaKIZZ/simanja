<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.About.AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ln_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:fontFamily="@font/cherry_cream_soda"
            android:text="SIMANJA"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_versi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistem Informasi Management Jalan &amp; Jembatan"
            android:textAlignment="center"
            android:textSize="10sp" />

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_55"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_55"
            android:alpha="0.2"
            android:background="@android:color/black" />

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_55"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/margin_55"
            android:layout_marginBottom="@dimen/margin_8"
            android:alpha="0.2"
            android:background="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ln_footer"
        android:layout_below="@id/ln_header"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/ln_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_24">

        <TextView
            android:id="@+id/txt_versi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:text="v.5" />
    </LinearLayout>

</RelativeLayout>